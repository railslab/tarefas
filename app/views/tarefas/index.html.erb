<section id="todoapp">

  <header id="header">
    <h1>tarefas</h1>

    <%= form_tag tarefas_path do %>
      <input id="new-todo"
             placeholder="O que você precisa fazer?"
             name="tarefa"
             autofocus
             required>
    <% end %>
  </header>

  <section id="main">
    <ul id="todo-list">
      
      <% for tarefa in @tarefas %>
      <li class="<%= 'completed' if tarefa.concluida? %>">
        <div class="view">
          <a href="<%= toggle_tarefa_path tarefa %>"
             class="toggle"
             data-method="patch"></a>

          <label><%= tarefa.titulo %></label>

          <a href="<%= tarefa_path tarefa %>" 
             data-method="delete"
             data-confirm="Tem Certeza?"
             class="destroy"></a>
        </div>
      </li>
      <% end %>

    </ul>
  </section>
  
  <footer id="footer">
    <span id="todo-count">
      <%= pluralize @tarefas.count, 'tarefa' %>
    </span>
    
    <ul id="filters">
      <li>
        <a class="<%= 'selected' if action_name == 'index' %>"
           href="<%= tarefas_path %>">
              Todas
        </a>
      </li>

      <li>
        <a class="<%= 'selected' if action_name == 'ativas' %>"
            href="<%= ativas_tarefas_path %>">
              Ativas
        </a>
      </li>

      <li>
        <a class="<%= 'selected' if action_name == 'concluidas' %>"
           href="<%= concluidas_tarefas_path %>">
              Concluídas
        </a>
      </li>
    </ul>

    <% unless @tarefas_concluidas_count.zero? %>
    <a id="clear-completed"
       href="<%= concluidas_tarefas_path %>"
       data-method="delete"
       data-confirm="Tem Certeza?">
          Excluir Tarefas Concluídas (<%= @tarefas_concluidas_count %>)
    </a>
    <% end %>

  </footer>
</section>
